<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.App">

    <Application.Resources>
        <!-- Placeholder for dynamically loaded theme -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default Theme (will be replaced in App.xaml.cs) -->


                <!-- Static styles shared across themes -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
                        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark=Black}" />
        </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
